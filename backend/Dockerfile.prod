FROM denoland/deno:alpine-2.0.0

WORKDIR /app

# Copy dependency files
COPY deno.json deno.lock* ./

# Copy source code
COPY src/ ./src/

# Cache dependencies
RUN deno cache src/main.ts

EXPOSE 8000

# Run with minimal permissions
CMD ["deno", "run", "--allow-net", "--allow-env", "--allow-read", "src/main.ts"]

